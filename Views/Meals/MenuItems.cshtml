@model IEnumerable<YUMMY.Models.Meal>

@{
    ViewData["Title"] = "MenuItems";
}

<style>
    .h:hover {
        /* background-color: rgba(253, 208, 118, 0.3); */
        box-shadow: 10px 10px 30px grey;
        transform: scale(1);
    }
</style>
<div class="container">

    @* <div class="row gy-5 text-center"> *@
    <div class="row text-center">
        @foreach (var meal in Model)
        {

            <div class="col-lg-5 menu-item card mx-4 h" style="width:20%; margin-top:5%" >
                <img src="~/img/menu/@meal.MealImage" alt="Meal Image" style="max-width: 300px;height: 300px;" />
                <br /> <br />
                <h5>@meal.MealName</h5>
                @* <p class="ingredients">@meal.MealIngradints</p> *@
                 <h5 class="price">$@meal.MealPrice</h5>
                <a asp-action="Details" asp-route-id="@meal.ID" class="btn btn-danger mb-2 mt-2"style="background-color : var(--color-primary) " >Details</a>
            </div>
        



        }
    </div>
</div>
