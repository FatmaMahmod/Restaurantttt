@model IEnumerable<YUMMY.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    <button>
        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminView">Back To Admin Page</a>
    </button>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventPricce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventPricce)
                </td>
                <td>
                    <img src="@("/images/"+item.EventImage)" style="width:200px;height:200px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
