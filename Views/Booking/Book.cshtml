@model Yummy.Models.Booking

@{
    ViewData["Title"] = "Book";
}

@* <div class="row">
    <div class="col-md-4">
        <form asp-action="Book"> *@
<section class="book-a-table" style="margin-top:0px">
    <div class="container" style="margin-top:0px">
        <div class="section-header">
            <h2>Book A Table</h2>
            <p>Book <span>Your Stay</span> With Us</p>
        </div>

        <div class="row g-0">
            <div class="col-lg-4 reservation-img" style="background-image: url(/img/about-2.jpg);"></div>
                <div class="col-lg-8 d-flex align-items-center reservation-form-bg">
                        <form asp-action="Book" data-aos-delay="100" role="form" class="php-email-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row gy-4">
                                <div class="col-lg-4 col-md-6">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Your Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="col-lg-4 col-md-6">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Your Phone" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <label asp-for="Date" class="control-label"></label>
                                    <input asp-for="Date" class="form-control" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>

                                <div class="col-lg-4 col-md-6">
                                    <label asp-for="peopleNumber" class="control-label"></label>
                                    <input asp-for="peopleNumber" class="form-control" placeholder="number of people" />
                                    <span asp-validation-for="peopleNumber" class="text-danger"></span>


                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea asp-for="Message" class="form-control" placeholder="Message"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>

                                <div class="validate"></div>
                            </div>
                            <div class="mb-3">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
                            </div>
                            <div class="text-center"><button type="submit">Book a Table</button></div>
                        </form>

                    </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
