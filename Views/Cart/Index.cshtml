<div class="row">
  
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-8 mx-auto mb-4">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="~/img/menu/@item.Meal.MealImage" class="card-img" style="max-height: 200px; width: 100%;" alt="Meal Image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.Meal.MealName</h5>
                                <p class="card-text">Price: @item.Meal.MealPrice</p>
                                <div class="btn-group" role="group" aria-label="Quantity Controls">
                                    <a asp-action="minus" asp-route-id="@item.Id"  class="btn btn-secondary">-</a>

                                    <button type="button" class="btn btn-light" disabled>@item.Count</button>

                                    <a asp-action="plus" asp-route-id="@item.Id"  class="btn btn-secondary">+</a>
                                   
                                    <a asp-action="detete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }<div>
        <p>totalsum: @ViewBag.Sum </p>
    </div>
    }
    
    else
    {
        <div class="alert alert-danger">No items in your cart.</div>
    }
</div>
