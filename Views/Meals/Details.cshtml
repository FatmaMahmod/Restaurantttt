@model Yummy.Models.cart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <form  method="post">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/menu/@Model.Meal.MealImage" alt="Meal Image" class="img-fluid" style="max-width: 300px; height: 300px;" />
                <input type="hidden" asp-for="MealId" />
            </div>
            <div class="col-md-8">
                <div class="details-section">
                    <h4>@Model.Meal.MealName</h4>
                    <p>@Model.Meal.MealIngradints</p>
                    <p>Price: @Model.Meal.MealPrice</p>
                    <p>Category: @Model.Meal.Category.CategoryName</p>

                    <!-- Display Count in input field -->
                    <div class="form-group">
                        <label asp-for="Count" class="control-label">Count:</label>
                        <input asp-for="Count" class="form-control" type="number" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="text-center">
                    <!-- Submit button as "Add to Cart" -->
                    <button type="submit" class="btn btn-success">Add to Cart</button>
                    <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>
