<body>
 
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="container-fluid d-flex align-items-center justify-content-between">         
                 <a  asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 style="color:black; font-weight:bold; font-size:160%;">Yummy<span style="color:var(--color-primary);">.</span></h1>
                 </a> 
         
                @* <h1>Yummy<span>.</span></h1> *@
            <nav id="navbar" class="navbar">
                <ul>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
@*                     <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li> *@
                    <li><a href="#about">About</a></li>
                    <li><a href="#menu">Menu</a></li>
                    <li><a href="#events">Events</a></li>
                    <li><a href="#chefs">Chefs</a></li>
                    <li><a href="#gallery">Gallery</a></li>

                  

                @*     <li class="dropdown">
 *@
                    <li><a href="#contact">Contact</a></li>
                    <li>
                        <a href="https://localhost:44362/cart/index" class="nav-link">
                            Cart  <i class="bi bi-cart"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            @* Search 

            <form class="form-wrapper cf">
                <input type="text" placeholder="Search here..." required>
                <a class="btn" href="https://localhost:44362/Home/Search?searching=" type="submit">Search</a>
            </form>
 

             end search *@


            <form class="form-wrapper cf" action="/Home/Search" method="get">
                <input type="text" name="searching" placeholder="Search here..." required>
                <button class="btn" type="submit">Search</button>
            </form>


            <a class="btn-book-a-table" asp-controller="Booking" asp-action="Book">Book a Table</a>
            @* <a asp-action="Index">Back to List</a> *@


            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>
            
                <partial name="_LoginPartial" />
            
        </div>
    </header>
    <br />
    <br />
   
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <div id="preloader"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
