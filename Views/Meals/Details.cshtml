@model YUMMY.Models.Meal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="card col-lg-8 col-m-12 col-sm-12 menu-item text-center mx-lg-auto" style="border-radius:15px; border:1px solid lightgrey;">
    <a href="~/img/menu/menu-item-3.png" class="glightbox mx-auto"><img src="/images/@Html.DisplayFor(model => model.MealImage)" class="menu-img img-fluid my-5" style="border-radius:10px; width:70%; " alt=""></a>
    <h2>  @Html.DisplayFor(model => model.MealName)</h2>
    <p class="ingredients fs-5">
        @Html.DisplayFor(model => model.MealIngradints)
    </p>
    <p class="price" style="color:var(--color-primary); font-size:200%">
        $@Html.DisplayFor(model => model.MealPrice)
    </p>
</div>

<section class="book-a-table" style="margin-top:0px">
    <div class="container" style="margin-top:0px">
    <form>
        <textarea placeholder="your review"></textarea>
        <div class="text-center"><button type="submit">Show</button></div>
    </form>
</div>
</section>

