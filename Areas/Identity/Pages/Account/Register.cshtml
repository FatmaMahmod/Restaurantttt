  <!-- Jumbotron -->
  <div class="container py-4 text-center" style="width:60% ; margin:auto">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up now</h2>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
               <div asp-validation-summary="All" class="text-danger"></div>
              <!-- 2 column grid layout with text inputs for the first and last names -->
              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                      <input asp-for="Input.FristName" placeholder="FirstName" id="form3Example1" class="form-control" autocomplete="username" aria-required="true" />
                      @* <label asp-for="Input.FristName" for="form3Example1">First name</label> *@
                      <span asp-validation-for="Input.FristName" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                      <input asp-for="Input.LastName" placeholder="LastName" id="form3Example2" class="form-control" autocomplete="username" aria-required="true" />
                      @* <label asp-for="Input.LastName" for="form3Example2">Last name</label> *@
                      <span asp-validation-for="Input.LastName" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <!-- Email input -->
              <div class="form-outline mb-4">
                                <input asp-for="Input.Email" placeholder="Email" id="form3Example3" class="form-control" autocomplete="username" aria-required="true" />
                     @* <label asp-for="Input.Email" for="form3Example3">Email address</label> *@
                     <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                                <input asp-for="Input.Password" placeholder="Password" id="form3Example4" class="form-control" autocomplete="new-password" aria-required="true" />
                    @* <label asp-for="Input.Password" for="form3Example4">Password</label> *@
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
              <div class="form-outline mb-4">
                    <input asp-for="Input.ConfirmPassword" placeholder="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    @* <label asp-for="Input.ConfirmPassword">Confirm Password</label> *@
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

              </div>

              <!-- Submit button -->
              @* <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button> *@
                            <button type="submit" id="registerSubmit" style="color:white;background-color:var(--color-primary)" class="btn btn-block mb-4">
                LogIn
              </button>

              <!-- Register buttons -->
                            <div class="text-center">
                                <p>or sign up with:</p>
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {

                                }
                                else
                                {

                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins!)
                                                {
                                                    <button type="submit" class="btn " style="color:white;background-color:var(--color-primary)" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                }
                                            </p>
                                        </div>
                                    </form>
                                }
                            }
                            </div>
        
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/img/gallery/gallery-5.jpg" class=" rounded-4 shadow-4 im" style=" max-width: 500px;
            height: 570px;
            margin-left: 10%;"
          alt="" />
      </div>
    </div>
  </div>
