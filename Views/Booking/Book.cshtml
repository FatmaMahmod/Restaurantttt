@model YUMMY.Models.Event

@{
    ViewData["Title"] = "Book";
}

<section class="book-a-table" style="margin-top:0px">
    <div class="container" style="margin-top:0px">

        <div class="section-header">
            <h2>Book A Table</h2>
            <p>Book <span>Your Stay</span> With Us</p>
        </div>

        <div class="row g-0">

            @* <div class="col-lg-4 reservation-img" style="background-image: url(/img/reservation.jpg);" ></div> *@
            <div class="col-lg-4 reservation-img" style="background-image: url(/img/about-2.jpg);"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg">
                <form asp-action="Book" data-aos-delay="100" role="form" class="php-email-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <label asp-for="EventName" class="control-label"></label>
                            <input asp-for="EventName" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <label asp-for="EventDescription" class="control-label"></label>
                            <input asp-for="EventDescription" class="form-control" placeholder="Your Email" />
                            <span asp-validation-for="EventDescription" class="text-danger"></span>
                        </div>
                      @*   <div class="col-lg-4 col-md-6">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Your Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div> *@
                        <div class="col-lg-4 col-md-6">
                            <label asp-for="dateTime" class="control-label"></label>
                            <input asp-for="dateTime" class="form-control" />
                            <span asp-validation-for="dateTime" class="text-danger"></span>
                        </div>
                        
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="people" id="people" placeholder="# of people" data-rule="minlen:1" data-msg="Please enter at least 1 chars">
                            <div class="validate"></div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message"></textarea>
                        <div class="validate"></div>
                    </div>
                    <div class="mb-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
                    </div>
                    <div class="text-center"><button type="submit">Book a Table</button></div>
                </form>
            



